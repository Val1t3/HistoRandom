{
    "manifest_version": 2,
    "name": "HistoRandom",
    "version": "1.0",
    "icons": {
        "16": "assets/favicon-16x16.png",
        "32": "assets/favicon-32x32.png",
        "128" : "assets/favicon-32x32.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://doc-pedagogie.umontpellier.fr/*"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs"
    ]
}